<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".QuestionActivity$PlaceholderFragment"
    >
    <TextView
        android:id="@+id/frequency_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/frequency_label"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:paddingRight="5dp"
        />
    <TextView
        android:id="@+id/frequency_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/frequency_label"
        />
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_word_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <RadioGroup
        android:id="@+id/repetitionChoice"
        android:checkedButton="@+id/highChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_word_container"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/repetition_label"
            android:text="@string/repetition_label"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            />
        <RadioButton
            android:id="@+id/highChoice"
            android:text="@string/high_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
        <RadioButton
            android:id="@+id/mediumChoice"
            android:text="@string/medium_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
        <RadioButton
            android:id="@+id/lowChoice"
            android:text="@string/low_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RadioButton
            android:id="@+id/neverChoice"
            android:text="@string/never_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />
    </RadioGroup>

    <Button
        android:id="@+id/prev_button"
        android:text="@string/prev_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repetitionChoice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="120dp" />

    <Button
        android:id="@+id/next_button"
        android:text="@string/next_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repetitionChoice"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="120dp" />

</RelativeLayout>
